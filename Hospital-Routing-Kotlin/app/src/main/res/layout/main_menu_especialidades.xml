<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logo izquierdo -->
    <ImageView
        android:id="@+id/imgLeft"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/anegl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Logo derecho -->
    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/anegl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hospital Finder"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#009688"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgLeft"
        app:layout_constraintEnd_toStartOf="@id/imgRight"
        app:layout_constraintBottom_toBottomOf="@id/imgLeft"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Especialidades"
        android:textSize="22sp"
        android:textColor="#009688"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Label nueva especialidad -->
    <TextView
        android:id="@+id/tvNuevaEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva especialidad"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Input -->
    <EditText
        android:id="@+id/etNuevaEspecialidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ej. Cardiología"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvNuevaEspecialidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNuevaEspecialidad" />

    <!-- Botón -->
    <Button
        android:id="@+id/btnNuevaEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/etNuevaEspecialidad"
        app:layout_constraintBottom_toBottomOf="@id/etNuevaEspecialidad"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Título lista -->
    <TextView
        android:id="@+id/tvLista"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista de Especialidades"
        android:textSize="20sp"
        android:textColor="#009688"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/etNuevaEspecialidad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Lista -->
    <ListView
        android:id="@+id/lvEspecialidades"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
